<%- include("../include/head")  %> 
<%- include("../include/aside")  %> 
<%- include("../include/navePare")  %> 
<%- include("../include/alert")  %> 
</head>
    </body>
        <!-- Main Wrapper -->
        <div class="main-wrapper">
            <!-- Page Wrapper -->
            <div class="page-wrapper">
                <div class="content container-fluid">
                    <!-- Page Header -->
                    <div class="page-header">
                        <div class="row">
                            <div class="col-sm-7 col-auto">
                                <h3 class="page-title">All Pharmacy</h3>
                                <ul class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
                                    <li class="breadcrumb-item active">Pharmacy</li>
                                </ul>
                            </div>
                        </div>
                        <%- include("../include/notification")  %> 
                    </div>
                    <!-- /Page Header -->
                    <div class="row">
                        <div class="col-sm-12">
							<div class="card">
								<div class="card-body">
									<div class="table-responsive">
										<table class="datatable table table-hover table-center mb-0">
											<thead>
												<tr>
													<th>Doctor Name</th>
													<th>phone</th>
													<th>province</th>
													<th>village</th>
													<th>Date</th>
													<th>countroll</th>
													
												</tr>
											</thead>
											<tbody>
												<% allPharmacy.forEach(element => { %>
												 												<tr>
													<td>
														<h2 class="table-avatar">
															<a href="profile.html" class="avatar avatar-sm mr-2"><img class="avatar-img rounded-circle" src="/backEnd/assets/img/pharmacyImage/<%= element.image ? element.image.split("--")[0] : "avatar.png" %>" alt="User Image"></a>
															<a href="profile.html"><%= element.name %></a>
														</h2>
													</td>
													<td><%= element.phone %></td>
													<td><%= element.province %></td>
													<td><%= element.village %></td>
													
													<td><%= formateDate(element.createdAt) %> <br><small><%= formateDate(element.createdAt , "time") %> %> Am</small></td>
													
													<td>
														<a href="/Pharmacy/activePharmacy/<%= element.id %>?isActive=<%= element.isActive ? "1" : "0" %>" class="btn btn-primary"><%= element.isActive ? "NotActive" : "active" %></a>
														<a href="/Pharmacy/editPharmasy/<%= element.id %>" class="btn btn-success">Edit</a>
														<form class="d-inline" action="deletePharmacy" method="post">
															<input type="hidden" name="id" value="<%= element.id %>">
															<input type="hidden" name="oldImage" value="<%= element.image %>">
															<button class="btn btn-danger">Delete</button>
														</form>

													</td>
												</tr>
												<% }) %>

											</tbody>
										</table>
									</div>
								</div>
							</div>
						</div>	
                    </div>
                </div>			
            </div>
            <!-- /Page Wrapper -->


        <%- include("../include/footer_script")  %> 
        		
		<!-- Datatables JS -->
		<script src="/backEnd/assets/plugins/datatables/jquery.dataTables.min.js"></script>
		<script src="/backEnd/assets/plugins/datatables/datatables.min.js"></script>
        <script  src="/backEnd/assets/js/script.js"></script>

    </head>
</body>