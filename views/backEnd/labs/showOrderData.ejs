<%- include("../include/head")  %> 
<link rel="stylesheet" href="/frontEnd/assets/css/style.css">
    <link
      rel="stylesheet"
      href="/frontEnd/assets/plugins/select2/css/select2.min.css"
    />

    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="/frontEnd/assets/plugins/bootstrap-tagsinput/css/bootstrap-tagsinput.css"
    />

    <link
      rel="stylesheet"
      href="/frontEnd/assets/plugins/dropzone/dropzone.min.css"
    />
    <!-- Main CSS -->
	<style>
		body {
			background-color: #f8f9fa;
		}
	</style>
<%- include("../include/aside")  %> 
<%- include("../include/navePare")  %> 
<%- include("../include/alert")  %> 
</head>
    </body>
        <!-- Main Wrapper -->
        <div class="main-wrapper">
            <!-- Page Wrapper -->
            <div class="page-wrapper">
                <div class="content container-fluid">
                    <!-- Page Header -->
                    <div class="page-header">
                        <div class="row">
                            <div class="col-sm-7 col-auto">
                                <h3 class="page-title">show order data</h3>
                                <ul class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="/dashpord">Dashboard</a></li>
                                    <li class="breadcrumb-item active">order data</li>
                                </ul>
                            </div>
                        </div>
                        <%- include("../include/notification")  %> 
                    </div>
                    <!-- /Page Header -->
                    <div class="row">
			            <div class="col-md-12">
							<form method="post" enctype="multipart/form-data">
								<!-- Basic Information -->
								<div class="card">
									<div class="card-body">
										<h4 class="card-title">Basic Information</h4>
										<div class="row form-row">
											<div class="col-md-12">
												<div class="form-group">
													<label>name <span class="text-danger">*</span></label>
													<input name="name" disabled value="<%= order.name %>" type="text" class="form-control">
													<% if (validationError) { %>
														<% if (validationError.name) { %>
															<span class="text-danger"><%=validationError.name[0].msg %></span>
														<% } %>
													<% } %>  
												</div>
											</div>

											<div class="col-md-6">
												<div class="form-group">
													<label>phone <span class="text-danger">*</span></label>
													<input disabled value="<%= order.phone %>" name="phone" type="text" class="form-control">
													<% if (validationError) { %>
														<% if (validationError.phone) { %>
															<span class="text-danger"><%=validationError.phone[0].msg %></span>
														<% } %>
													<% } %>  
												</div>
											</div>
									
											<div class="col-md-6">
												<div class="form-group">
													<label>addres <span class="text-danger">*</span></label>
													<input disabled value="<%= order.addres %>" name="addres" type="text" class="form-control">
													<% if (validationError) { %>
														<% if (validationError.addres) { %>
															<span class="text-danger"><%=validationError.addres[0].msg %></span>
														<% } %>
													<% } %>  
												</div>
											</div>

											<div class="col-md-12">
												<div class="form-group">
													<label>order image <span class="text-danger">*</span></label>
													<img style="height:500px" src="/backEnd/assets/img/pharmacyOrderImage/<%= order.image ? order.image.split("--")[0] : "avatar.png"  %>" name="province" type="text" class="form-control">  
												</div>
											</div>
										</div>
									</div>
								</div>
								<!-- /Basic Information -->
							</form>
						</div>
                    </div>
                </div>			
            </div>
            <!-- /Page Wrapper -->


        <%- include("../include/footer_script")  %> 
        		
        
		<script src="/backEnd/assets/plugins/datatables/jquery.dataTables.min.js"></script>
		<script src="/backEnd/assets/plugins/datatables/datatables.min.js"></script>

        <script src="/frontEnd/assets/plugins/theia-sticky-sidebar/ResizeSensor.js"></script>
        <script src="/frontEnd/assets/plugins/theia-sticky-sidebar/theia-sticky-sidebar.js"></script>
		
		<script src="/frontEnd/assets/plugins/select2/js/select2.min.js"></script>
		
		<script src="/frontEnd/assets/plugins/dropzone/dropzone.min.js"></script>
		<script src="/frontEnd/assets/plugins/bootstrap-tagsinput/js/bootstrap-tagsinput.js"></script>	
		<script src="/frontEnd/assets/js/profile-settings.js"></script>
        <script src="/backEnd/assets/js/script.js"></script>

    </head>
</body>