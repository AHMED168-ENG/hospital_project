<%- include("../include/head")  %> 
<link rel="stylesheet" href="/frontEnd/assets/css/style.css">
    <link
      rel="stylesheet"
      href="/frontEnd/assets/plugins/select2/css/select2.min.css"
    />

    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="/frontEnd/assets/plugins/bootstrap-tagsinput/css/bootstrap-tagsinput.css"
    />

    <link
      rel="stylesheet"
      href="/frontEnd/assets/plugins/dropzone/dropzone.min.css"
    />
    <!-- Main CSS -->
	<style>
		body {
			background-color: #f8f9fa;
		}
	</style>
<%- include("../include/aside")  %> 
<%- include("../include/navePare")  %> 
<%- include("../include/alert")  %> 
</head>
    </body>
        <!-- Main Wrapper -->
        <div class="main-wrapper">
            <!-- Page Wrapper -->
            <div class="page-wrapper">
                <div class="content container-fluid">
                    <!-- Page Header -->
                    <div class="page-header">
                        <div class="row">
                            <div class="col-sm-7 col-auto">
                                <h3 class="page-title">Doctor</h3>
                                <ul class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
                                    <li class="breadcrumb-item active">Doctors</li>
                                </ul>
                            </div>
                        </div>
                        <%- include("../include/notification")  %> 
                    </div>
                    <!-- /Page Header -->
                    <div class="row">
			            <div class="col-md-12">
							<form method="post" enctype="multipart/form-data">
								<div class="row form-row">
									<div class="col-12 col-md-12">
										<div class="form-group">
											<div class="change-avatar">
												<div class="profile-img">
													<img src="/backEnd/assets/img/patients/<%= user.image.split("--")[0] %>" alt="User Image">
												</div>
												<div class="upload-img">
													<div class="change-photo-btn">
														<span><i class="fa fa-upload"></i> Upload Photo</span>
														<input type="file" class="upload" accept="img/*" name="pationtImage">
														<input type="hidden" class="upload" value="<%= user.image %>" accept="img/*" name="OldpationtImage">
														<input type="hidden" class="upload" value="<%= user.id %>" name="id">
													</div>
													<small class="form-text text-muted">Allowed JPG, GIF or PNG. Max size of 2MB</small>
												</div>
											</div>
										</div>
									</div>
									<div class="col-12 col-md-6">
										<div class="form-group">
											<label>First Name</label>
											<input type="text" name="fName" class="form-control" value="<%= user.fName %>">
											<% if (validationError) { %>
												<% if (validationError.fName) { %>
													<span class="text-danger"><%=validationError.fName[0].msg %></span>
												<% } %>
											<% } %>   
										</div>
									</div>

									<div class="col-12 col-md-6">
										<div class="form-group">
											<label>Last Name</label>
											<input type="text" class="form-control" name="lName" value="<%= user.lName %>">
											<% if (validationError) { %>
												<% if (validationError.lName) { %>
													<span class="text-danger"><%=validationError.lName[0].msg %></span>
												<% } %>
											<% } %>   
										</div>
									</div>
									<div class="col-12 col-md-12">
										<div class="form-group">
											<label>Email ID</label>
											<input type="email" name="email" class="form-control" value="<%= user.email %>">
											<% if (validationError) { %>
												<% if (validationError.email) { %>
													<span class="text-danger"><%=validationError.email[0].msg %></span>
												<% } %>
											<% } %>   
										</div>
									</div>

									<div class="col-12 col-md-6">
										<div class="form-group">
											<label>age</label>
											<input type="text" class="form-control" name="age" value="<%= user.age %>">
											<% if (validationError) { %>
												<% if (validationError.age) { %>
													<span class="text-danger"><%=validationError.age[0].msg %></span>
												<% } %>
											<% } %>   
										</div>
									</div>
									<div class="col-12 col-md-6">
										<div class="form-group">
											<label>Date of Birth</label>
											<div class="cal-icon">
												<input type="text" class="form-control datetimepicker" name="Date_brith" value="<%= user.Date_brith ? formateDate(user.Date_brith) : "" %>">
												<% if (validationError) { %>
													<% if (validationError.Date_brith) { %>
														<span class="text-danger"><%=validationError.Date_brith[0].msg %></span>
													<% } %>
												<% } %>                                                 
											</div>
										</div>
									</div>
									<div class="col-12 col-md-6">
										<div class="form-group">
											<label>Blood Group</label>
											<select name="bloodType" class="form-control select">
												<option></option>
												<option <%= user.bloodType == "A-" ? "selected" : "" %>>A-</option>
												<option <%= user.bloodType == "A+" ? "selected" : "" %>>A+</option>
												<option <%= user.bloodType == "B-" ? "selected" : "" %>>B-</option>
												<option <%= user.bloodType == "B+" ? "selected" : "" %>>B+</option>
												<option <%= user.bloodType == "AB-" ? "selected" : "" %>>AB-</option>
												<option <%= user.bloodType == "AB+" ? "selected" : "" %>>AB+</option>
												<option <%= user.bloodType == "O-" ? "selected" : "" %>>O-</option>
												<option <%= user.bloodType == "O+" ? "selected" : "" %>>O+</option>
											</select>
											<% if (validationError) { %>
												<% if (validationError.bloodType) { %>
													<span class="text-danger"><%=validationError.bloodType[0].msg %></span>
												<% } %>
											<% } %>                                                               </div>
									</div>

									<div class="col-12 col-md-6">
										<div class="form-group">
											<label>Mobile</label>
											<input type="number" name="mobile" value="<%= user.mobile %>" class="form-control">
										</div>
									</div>
									<div class="col-12">
										<div class="form-group">
										<label>Address</label>
											<input type="text" class="form-control" name="addres" value="<%= user.addres %>">
											<% if (validationError) { %>
												<% if (validationError.addres) { %>
													<span class="text-danger"><%=validationError.addres[0].msg %></span>
												<% } %>
											<% } %>   
										</div>
									</div>
									<div class="col-12 col-md-6">
										<div class="form-group">
											<label>City</label>
											<input type="text" name="city" class="form-control" value="<%= user.city %>">
										</div>
									</div>
									<div class="col-12 col-md-6">
										<div class="form-group">
											<label>Country</label>
											<input type="text" class="form-control" name="country" value="<%= user.country %>">
											<% if (validationError) { %>
												<% if (validationError.country) { %>
													<span class="text-danger"><%=validationError.country[0].msg %></span>
												<% } %>
											<% } %>   
										</div>
									</div>
								</div>
								<div class="submit-section">
									<button type="submit" class="btn btn-primary submit-btn">Save Changes</button>
								</div>
							</form>
						</div>
                    </div>
                </div>			
            </div>
            <!-- /Page Wrapper -->


        <%- include("../include/footer_script")  %> 
        		
        
		<script src="/backEnd/assets/plugins/datatables/jquery.dataTables.min.js"></script>
		<script src="/backEnd/assets/plugins/datatables/datatables.min.js"></script>

        <script src="/frontEnd/assets/plugins/theia-sticky-sidebar/ResizeSensor.js"></script>
        <script src="/frontEnd/assets/plugins/theia-sticky-sidebar/theia-sticky-sidebar.js"></script>
		
		<script src="/frontEnd/assets/plugins/select2/js/select2.min.js"></script>
		
		<script src="/frontEnd/assets/plugins/dropzone/dropzone.min.js"></script>
		<script src="/frontEnd/assets/plugins/bootstrap-tagsinput/js/bootstrap-tagsinput.js"></script>	
		<script src="/frontEnd/assets/js/profile-settings.js"></script>
        <script src="/backEnd/assets/js/script.js"></script>

    </head>
</body>