<%- include("../include/head")  %> 
<%- include("../include/aside")  %> 
<%- include("../include/navePare")  %> 
<%- include("../include/alert")  %> 
</head>
    </body>
        <!-- Main Wrapper -->
        <div class="main-wrapper">
            <!-- Page Wrapper -->
            <div class="page-wrapper">
                <div class="content container-fluid">
                    <!-- Page Header -->
                    <div class="page-header">
                        <div class="row">
                            <div class="col-sm-7 col-auto">
                                <h3 class="page-title">All pationt</h3>
                                <ul class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
                                    <li class="breadcrumb-item active">pationt</li>
                                </ul>
                            </div>
                        </div>
                        <%- include("../include/notification")  %> 
                    </div>
                    <!-- /Page Header -->
                    <div class="row">
                        <div class="col-sm-12">
							<div class="card">
								<div class="card-body">
									<div class="table-responsive">
										<table class="datatable table table-hover table-center mb-0">
											<thead>
												<tr>
													<th>Doctor Name</th>
													<th>Age</th>
													<th>Addres</th>
													<th>Phone</th>
													
												</tr>
											</thead>
											<tbody>
												<% pationt.forEach(element => { %>
												 												<tr>
													<td>
														<h2 class="table-avatar">
															<a href="profile.html" class="avatar avatar-sm mr-2"><img class="avatar-img rounded-circle" src="/backEnd/assets/img/patients/<%= element.image ? element.image.split("--")[0] : "avatar.png" %>" alt="User Image"></a>
															<a href="profile.html"><%= element.fName + " " + element.lName %></a>
														</h2>
													</td>
													
													<td><%= element.age ? element.age : "not edit" %> </small></td>
													
													<td><%= element.addres %> </td>
													<td><%= element.mobile ? element.mobile : "not Edit" %> </td>
													
													<td>
														<a href="/pationt/activePationt/<%= element.id %>" class="btn btn-primary"><%= element.active ? "NotActive" : "active" %></a>
														<a href="/pationt/editPationt/<%= element.id %>" class="btn btn-success">Edit</a>

													</td>
												</tr>
												<% }) %>

											</tbody>
										</table>
									</div>
								</div>
							</div>
						</div>	
                    </div>
                </div>			
            </div>
            <!-- /Page Wrapper -->


        <%- include("../include/footer_script")  %> 
        		
		<!-- Datatables JS -->
		<script src="/backEnd/assets/plugins/datatables/jquery.dataTables.min.js"></script>
		<script src="/backEnd/assets/plugins/datatables/datatables.min.js"></script>
        <script  src="/backEnd/assets/js/script.js"></script>

    </head>
</body>