<%- include("../include/head")  %> 
<link rel="stylesheet" href="/frontEnd/assets/css/style.css">
    <link
      rel="stylesheet"
      href="/frontEnd/assets/plugins/select2/css/select2.min.css"
    />

    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="/frontEnd/assets/plugins/bootstrap-tagsinput/css/bootstrap-tagsinput.css"
    />

    <link
      rel="stylesheet"
      href="/frontEnd/assets/plugins/dropzone/dropzone.min.css"
    />
    <!-- Main CSS -->
	<style>
		body {
			background-color: #f8f9fa;
		}
	</style>

</head>
    </body>
        <!-- Main Wrapper -->
        <div class="main-wrapper">
            <%- include("../include/naveBare.ejs")  %> 
            <!-- Page Wrapper -->
            <div class="page-wrapper">
                <div class="content container-fluid">
                    <div class="row">
			            <div class="col-md-12">
							<form method="post" enctype="multipart/form-data">
								<!-- Basic Information -->
								<div class="container">
                                    <%- include("../include/notification.ejs")  %> 
                                    <div class="card">
                                        <div class="card-body">
                                            <h4 class="card-title">Basic Information</h4>
                                            <div class="row form-row">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <div class="change-avatar">
                                                            <div class="profile-img">
                                                                <img src="/backEnd/assets/img/doctors/avatar.png" alt="User Image">
                                                            </div>
                                                            <div class="upload-img">
                                                                <div class="change-photo-btn">
                                                                    <span><i class="fa fa-upload"></i> Upload Photo</span>
                                                                    <input type="file" class="upload" name="image">
                                                                    
                                                                </div>
                                                                 <% if (validationError) { %>
                                                                        <% if (validationError.image) { %>
                                                                            <span class="text-danger"><%=validationError.image[0].msg %></span>
                                                                        <% } %>
                                                                    <% } %> 
                                                                <small class="form-text text-muted">Allowed JPG, GIF or PNG. Max size of 2MB</small>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label>phone <span class="text-danger">*</span></label>
                                                        <input name="phone" type="text" class="form-control">
                                                        <% if (validationError) { %>
                                                            <% if (validationError.phone) { %>
                                                                <span class="text-danger"><%=validationError.phone[0].msg %></span>
                                                            <% } %>
                                                        <% } %>  
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label>name <span class="text-danger">*</span></label>
                                                        <input name="name" type="text" class="form-control">
                                                        <% if (validationError) { %>
                                                            <% if (validationError.name) { %>
                                                                <span class="text-danger"><%=validationError.name[0].msg %></span>
                                                            <% } %>
                                                        <% } %>  
                                                    </div>
                                                </div>
                                
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label>Addres <span class="text-danger">*</span></label>
                                                        <input name="addres" type="text" class="form-control">
                                                        <% if (validationError) { %>
                                                            <% if (validationError.addres) { %>
                                                                <span class="text-danger"><%=validationError.addres[0].msg %></span>
                                                            <% } %>
                                                        <% } %>  
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
								    </div>
                                
								<div class="submit-section submit-btn-bottom">
									<button type="submit" class="btn btn-primary btn-block btn-md">Mack Order</button>
                                    <div class="alert alert-sm alert-danger">remepmer you should call pharmacy number for confirming order</div>
                                </div>
                                </div>
								<!-- /Basic Information -->
							</form>
						</div>
                    </div>
                </div>			
            </div>
            <!-- /Page Wrapper -->

        <%- include("../include/footer.ejs")  %> 
        <%- include("../include/footer_script")  %> 
        		
        
		<script src="/backEnd/assets/plugins/datatables/jquery.dataTables.min.js"></script>
		<script src="/backEnd/assets/plugins/datatables/datatables.min.js"></script>

        <script src="/frontEnd/assets/plugins/theia-sticky-sidebar/ResizeSensor.js"></script>
        <script src="/frontEnd/assets/plugins/theia-sticky-sidebar/theia-sticky-sidebar.js"></script>
		
		<script src="/frontEnd/assets/plugins/select2/js/select2.min.js"></script>
		
		<script src="/frontEnd/assets/plugins/dropzone/dropzone.min.js"></script>
		<script src="/frontEnd/assets/plugins/bootstrap-tagsinput/js/bootstrap-tagsinput.js"></script>	
		<script src="/frontEnd/assets/js/profile-settings.js"></script>
        <script src="/backEnd/assets/js/script.js"></script>

    </head>
</body>